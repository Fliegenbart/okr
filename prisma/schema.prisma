generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String              @id @default(cuid())
  name            String?
  email           String?             @unique
  emailVerified   DateTime?
  image           String?
  coupleId        String?
  preferredQuarterId String?
  couple          Couple?             @relation(fields: [coupleId], references: [id])
  preferredQuarter Quarter?           @relation("PreferredQuarter", fields: [preferredQuarterId], references: [id])
  accounts        Account[]
  sessions        Session[]
  keyResultUpdates KeyResultUpdate[]  @relation("UserKeyResultUpdates")
  nextActionObjectives Objective[]    @relation("ObjectiveNextActionOwner")
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
}

model Couple {
  id         String      @id @default(cuid())
  name       String
  vision     String?
  mission    String?
  checkInWeekday Int?
  checkInTime String?
  checkInDurationMinutes Int?
  checkInTimeZone String?
  inviteCode String      @unique
  users      User[]
  quarters   Quarter[]
  objectives Objective[]
  invites    Invite[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

model Quarter {
  id        String      @id @default(cuid())
  title     String
  startsAt  DateTime
  endsAt    DateTime
  coupleId  String
  couple    Couple      @relation(fields: [coupleId], references: [id], onDelete: Cascade)
  objectives Objective[]
  preferredBy User[]    @relation("PreferredQuarter")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model Objective {
  id          String      @id @default(cuid())
  title       String
  description String?
  nextAction  String?
  nextActionOwnerId String?
  coupleId    String
  quarterId   String
  couple      Couple      @relation(fields: [coupleId], references: [id], onDelete: Cascade)
  quarter     Quarter     @relation(fields: [quarterId], references: [id], onDelete: Cascade)
  keyResults  KeyResult[]
  nextActionOwner User?   @relation("ObjectiveNextActionOwner", fields: [nextActionOwnerId], references: [id])
  archivedAt  DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model KeyResult {
  id           String             @id @default(cuid())
  title        String
  targetValue  Float
  currentValue Float             @default(0)
  unit         String?
  objectiveId  String
  objective    Objective          @relation(fields: [objectiveId], references: [id], onDelete: Cascade)
  updates      KeyResultUpdate[]
  archivedAt   DateTime?
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

model KeyResultUpdate {
  id          String    @id @default(cuid())
  keyResultId String
  keyResult   KeyResult @relation(fields: [keyResultId], references: [id], onDelete: Cascade)
  value       Float
  previousValue Float?
  note        String?
  updatedById String?
  updatedBy   User?     @relation("UserKeyResultUpdates", fields: [updatedById], references: [id])
  createdAt   DateTime  @default(now())
}

model Invite {
  id        String   @id @default(cuid())
  coupleId  String
  email     String
  token     String   @unique
  expiresAt DateTime
  acceptedAt DateTime?
  createdAt DateTime @default(now())

  couple    Couple   @relation(fields: [coupleId], references: [id], onDelete: Cascade)
}

model Transcript {
  id         String           @id @default(cuid())
  title      String
  sourcePath String?
  metadata   Json?
  topics     Json?
  importedAt DateTime         @default(now())
  chunks     TranscriptChunk[]
}

model TranscriptChunk {
  id           String     @id @default(cuid())
  transcriptId String
  transcript   Transcript @relation(fields: [transcriptId], references: [id], onDelete: Cascade)
  chunkIndex   Int
  content      String
  createdAt    DateTime   @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
